@page
@model BankStartWeb.Pages.AccountView.TransactionModel
@{
}
<h1>Ny transaktion</h1>



 <div class="card-body"> 
     <form method="post">
            
         <div class="form-group"> 
             <label asp-for="AccountFrom">Välj konto</label>
             <select class="form-control" asp-for="AccountFrom" asp-items="@Model.CustAccounts"></select>
             <span asp-validation-for="AccountFrom" class="field-validation-error"></span>
         </div>
         
         <div class="form-group"> @*id ska gå till getelementbyid och onchange - visa eller ej*@
             <label asp-for="AccountTo">Konto att överföra till</label>
             <input class="form-control" asp-for="AccountTo">
             <span asp-validation-for="AccountTo" class="field-validation-error"></span>
         </div>

         <div class="form-group"> 
             <label asp-for="TransferSum">Summa</label>
             <input class="form-control" asp-for="TransferSum">
             <span asp-validation-for="TransferSum" class="field-validation-error"></span>
         </div>
         <button class="btn btn-primary" type="submit">Gör transaktion!</button>
     </form>
     
</div>

<a class="btn btn-danger" asp-route-custId="@Model.currentCustomerView.Id" asp-page="/CustomerView/CustomerViewSingle" >Avbryt</a>

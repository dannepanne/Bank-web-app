@page
@model BankStartWeb.Pages.CreateEditCustomer.CreateCustomerModel
@{
}

<div class="card">
    <div class="card-header">
        <h1>Ny kund</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label asp-for="Givenname">Förnamn</label>
                <input class="form-control" asp-for="Givenname">
                <span asp-validation-for="Givenname" class="field-validation-error"></span>
            </div>

             <div class="form-group">
                <label asp-for="Surname">Efternamn</label>
                <input class="form-control" asp-for="Surname">
                <span asp-validation-for="Surname" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Streetaddress">Adress</label>
                <input class="form-control" asp-for="Streetaddress">
                <span asp-validation-for="Streetaddress" class="field-validation-error"></span>
            </div>

             <div class="form-group">
                <label asp-for="Zipcode">Postnummer</label>
                <input class="form-control" asp-for="Zipcode">
                <span asp-validation-for="Zipcode" class="field-validation-error"></span>
            </div>           

             <div class="form-group">
                <label asp-for="City">Stad</label>
                <input class="form-control" asp-for="City">
                <span asp-validation-for="City" class="field-validation-error"></span>
            </div>
            
             <div class="form-group">
                <label asp-for="CountryId">Land</label>
                <select class="form-control" asp-for="CountryId" asp-items="@Model.AllCountries" >
                </select>
                <span asp-validation-for="CountryId" class="field-validation-error"></span>
            </div>

             <div class="form-group">
                <label asp-for="NationalId">Personnummer</label>
                <input class="form-control" asp-for="NationalId">
                <span asp-validation-for="NationalId" class="field-validation-error"></span>
            </div>

             
             <div class="form-group">
                <label asp-for="Telephone">Telefonnummer</label>
                <input class="form-control" asp-for="Telephone">
                <span asp-validation-for="Telephone" class="field-validation-error"></span>
            </div>

             <div class="form-group">
                <label asp-for="EmailAddress">Epostadress</label>
                <input class="form-control" asp-for="EmailAddress">
                <span asp-validation-for="EmailAddress" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Birthday">Födelsedag</label>
                <input class="form-control" asp-for="Birthday">
                <span asp-validation-for="Birthday" class="field-validation-error"></span>
            </div>


            <a class="btn btn-primary" type="submit">Registrera ny kund</a>

        </form>

    </div>
</div>